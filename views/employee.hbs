<div class="row">
    <div class="col-md-12">

        <h1>{{viewData.data.firstName}} {{viewData.data.last_name}} - Employee: {{viewData.data.employeeNum}}</h1>

        <form method="post" action="/employee/update">
            <input name="employeeNum" value="{{{viewData.data.employeeNum}}}" type="hidden">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{{viewData.data.firstName}}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Last Name:</label>
                            <input class="form-control" id="last_name" name="last_name" type="text" value="{{viewData.data.last_name}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" value="{{viewData.data.email}}" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" value="{{viewData.data.SSN}}" readonly="" type="text" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" value="{{viewData.data.addressStreet}}" type="text" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="addresCity">Address (City):</label>
                        <input class="form-control" id="addresCity" name="addresCity" value="{{viewData.data.addresCity}}" type="text" />
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressState" name="addressState" value="{{viewData.data.addressState}}" type="text" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" value="{{viewData.data.addressPostal}}" type="text" />
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" id="isManager" name="isManager" {{#if viewData.data.isManager}} checked="" {{/if}} type="checkbox">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" value="{{viewData.data.employeeManagerNum}}"
                                type="text">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label>
                            <br>
                            <label class="checkbox-inline">
                                <input id="statusFT" name="status" {{#equal viewData.data.status "Full Time"}}checked="" {{/equal}} value="Full Time" type="radio"> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input id="statusPT" name="status" {{#equal viewData.data.status "Part Time"}}checked="" {{/equal}} value="Part Time" type="radio"> Part Time
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            {{#if viewData.departments}}
                            <select class="form-control" name="department" id="department">
                                {{#each viewData.departments}}
                                <option value="{{departmentId}}" {{#if selected}} selected {{/if}}>{{departmentName}} </option>
                                {{/each}}
                            </select>
                            {{else}}
                            <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" value="{{viewData.data.hireDate}}" readonly="" type="text">
                        </div>
                    </div>
                </div>

            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" />
            <br />
            <br />
            <br />
        </form>
    </div>
</div>